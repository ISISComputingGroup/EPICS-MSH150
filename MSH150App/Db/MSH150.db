record(waveform, "$(P)$(Q)CONFIGFILE")
{
    field(DESC, "Config File")
    field(NELM, "256")
    field(FTVL, "CHAR")
    field(DTYP, "asynOctetRead")
    field(INP,  "@asyn($(PORT),0,0)CONFIGFILE")
    field(SCAN, "I/O Intr")
    info(archive, "VAL")
}

