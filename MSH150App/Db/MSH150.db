record(bo, "$(P)$(Q)SAVESETUP:SP")
{
    field(DESC, "Save Setup")
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),0,0)SAVESETUP")
    field(ZNAM, "0")
    field(ONAM, "1")
}

## current wavelength readback depends on items and will be generated by substitutions file
## probably MONO:WL 
record(ao, "$(P)$(Q)WL:SP")
{
    field(DESC, "Set Wavelength")
    field(DTYP, "asynFloat64")
    field(OUT,  "@asyn($(PORT),0,0)SELECTWAVELENGTH")
    field(PREC, "3")
    field(SCAN, "Passive")
	field(EGU, "")
    info(archive, "VAL")
	info(autosaveFields, "VAL")
	info(asyn:READBACK, "1")
}

